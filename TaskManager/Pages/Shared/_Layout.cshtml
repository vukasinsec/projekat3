@*
    _Layout.cshtml - Glavni izgled aplikacije
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskManager</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Font Awesome za ikone -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TaskManager.styles.css" asp-append-version="true" />

    <style>
        body {
            background-image: url('/images/your-wallpaper.jpg'); /* stavi svoj wallpaper */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            min-height: 100vh;
        }

        .navbar {
            background-color: rgba(255, 255, 255, 0.95); /* blago providna bela */
        }

        .footer {
            background-color: rgba(0, 0, 0, 0.85);
            color: #fff;
            padding: 15px 0;
        }

        .footer a {
            color: #ffc107; /* zlatna boja linkova */
            text-decoration: none;
        }

        .footer a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <!-- HEADER -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-page="/Index">
                    <i class="fas fa-tasks me-2"></i>TaskManager
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-medium" asp-area="" asp-page="/Index">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-medium" asp-area="" asp-page="/Privacy">
                                <i class="fas fa-user-secret me-1"></i>Privacy
                            </a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item d-flex align-items-center me-3">
                                <i class="fas fa-user-circle me-1"></i> Zdravo, @User.Identity.Name!
                            </li>
                            <li class="nav-item me-2">
                                <a class="btn btn-outline-primary btn-sm" asp-page="/Users/Profile">
                                    <i class="fas fa-user me-1"></i> Profile
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-danger btn-sm" href="#" data-bs-toggle="modal" data-bs-target="#logoutModal">
                                    <i class="fas fa-sign-out-alt me-1"></i> Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-2">
                                <a class="btn btn-outline-success btn-sm" asp-page="/Account/Login">
                                    <i class="fas fa-sign-in-alt me-1"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary btn-sm" asp-page="/Account/Register">
                                    <i class="fas fa-user-plus me-1"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- MAIN CONTENT -->
    <main class="container my-4">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="footer mt-auto">
        <div class="container d-flex justify-content-between">
            <div>
                &copy; 2025 TaskManager
            </div>
            <div>
                <a asp-page="/Privacy"><i class="fas fa-shield-alt me-1"></i>Privacy</a>
                <span class="mx-2">|</span>
                <a href="#"><i class="fas fa-envelope me-1"></i>Contact</a>
            </div>
        </div>
    </footer>

    <!-- Logout Modal -->
    <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Potvrda odjave</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Zatvori"></button>
                </div>
                <div class="modal-body">
                    Da li ste sigurni da želite da se odjavite?
                </div>
                <div class="modal-footer">
                    <form method="post" asp-page="/Account/Logout">
                        <button type="submit" class="btn btn-danger">Da, odjavi me</button>
                    </form>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Otkaži</button>
                </div>
            </div>
        </div>
    </div>

    <!-- SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
