@page "{id}"
@model TaskManager.Pages.Projects.DetailsModel
@{
    ViewData["Title"] = "Project Details";
}

<div class="container my-4">
    <div class="row">
        <!-- Levi deo: Tasks -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Tasks</h4>
                    @if (Model.CanAddTasks)
                    {
                        <a asp-page="/Tasks/Create" asp-route-projectId="@Model.Project?.Id" class="btn btn-success btn-sm">
                            <i class="fas fa-plus me-1"></i> Add Task
                        </a>
                    }
                </div>
                <div class="card-body" style="max-height: 75vh; overflow-y: auto;">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                    }

                    @if (Model.Tasks.Any())
                    {
                        <div class="row g-3">
                            @foreach (var task in Model.Tasks)
                            {
                                <div class="col-12">
                                    <div class="card border-primary shadow-sm h-100">
                                        <div class="card-body d-flex justify-content-between align-items-center">
                                            <div>
                                                <strong>@task.Title</strong><br />
                                                <span class="badge bg-secondary">@task.Status</span>
                                                <span class="badge bg-warning text-dark">@task.Priority</span>
                                            </div>
                                            <a asp-page="/Tasks/Details" asp-route-id="@task.Id" class="btn btn-outline-primary btn-sm">
                                                View
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p>No tasks in this project yet.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Desni deo: Project Info + Collaborators -->
        <div class="col-lg-4 mb-4">
            <!-- Project Info -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h3 class="card-title">
                        @Model.Project?.Name
                        @if (Model.IsOwner)
                        {
                            <span class="badge bg-primary ms-2">Owner</span>
                        }
                    </h3>
                    <p><strong>Description:</strong> @Model.Project?.Description</p>
                    <p><strong>Owner:</strong> @Model.Owner?.UserName (@Model.Owner?.Email)</p>
                </div>
            </div>

            <!-- Collaborators -->
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Collaborators</h5>
                </div>
                <div class="card-body">
                    @if (Model.Collaborators.Any())
                    {
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var collaborator in Model.Collaborators)
                            {
                                <div class="text-center">
                                    <a asp-page="/Users/View" asp-route-id="@collaborator.Id" class="text-decoration-none text-dark">
                                        <img src="@collaborator.ProfileImageUrl" class="rounded-circle mb-1" style="width:50px; height:50px; object-fit:cover;" />
                                        <div style="font-size: 0.85rem;">@collaborator.UserName</div>
                                    </a>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p>No collaborators yet.</p>
                    }
                </div>
            </div>

            <!-- Add Collaborator -->
            @if (Model.IsOwner)
            {
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h5 class="mb-0">Add Collaborator</h5>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-page-handler="AddCollaborator" class="row g-2 align-items-center">
                            <div class="col-12 mb-2">
                                <select asp-for="SelectedUserId" class="form-select" asp-items="Model.AvailableUsersSelectList">
                                    <option value="">-- Select user --</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fas fa-user-plus me-1"></i> Add Collaborator
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    body {
        background-image: url('/images/details.jpg'); /* putanja do tvoje slike */
        background-size: cover;     /* slika zauzima celu pozadinu */
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed; /* ostaje fiksna prilikom skrolovanja */
    }

    /* Opcionalno: dodaj overlay na kartice da budu čitljive */
    .card {
        background-color: rgba(255, 255, 255, 0.9); /* malo providno bela boja */
    }
    .list-group-item:hover {
        background-color: #f8f9fa;
        transition: 0.2s;
    }
</style>
